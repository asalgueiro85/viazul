{% extends '::front_layout.html.twig' %}

{% block bauche %} class="active"  {% endblock %}


{% block body -%}
    <h1><i class="fa fa-user"></i> Bauches</h1>

    <div class="box box-solid box-primary">
        <div class="box-header">
            <h3 class="box-title">Editar bauche</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{ form_start(edit_form) }}
        <div class="box-body col-md-12">
            {{ form_errors(edit_form) }}
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(edit_form.nombre) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.area) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.dirArea) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.causa) }}
                </div>


            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(edit_form.importe) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.destino) }}
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(edit_form.fechaEmitido) }}
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group col-md-6">
                            {{ form_row(edit_form.estado) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->


        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a class="btn btn-default" href="{{ path('bauche') }}">Cancelar</a>
        </div>
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="{{ asset('bootstrap/dist/js/pages/dashboard.js') }}" type="text/javascript"></script>

{% endblock %}
