{% extends '::front_layout.html.twig' %}

 {% block bauche %} class="active" {% endblock %}


{% block body -%}
    <h1><i class="fa fa-list-alt"></i> Bauches</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Bauches</h3>

                    <div class="pull-right">
                        <a href="{{ path('bauche_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Importe</th>
                            <th>Destino</th>
                            <th>Causa</th>
                            <th>Emitido</th>
                            <th>Consumido</th>
                            <th  class="col-xs-1">Editar</th>
                            <th  class="col-xs-1">Eliminar</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('bauche_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                                <td>{{ entity.importe }}</td>
                                <td>
                                    {% filter upper %}
                                    {{ entity.destino }}
                                    {% endfilter %}</td>
                                <td>{{ entity.causa }}</td>
                                <td>{% if entity.fechaEmitido %}{{ entity.fechaEmitido|date('d-m-Y') }}{% endif %}</td>
                                <td align="center">
                                    {% if entity.estado %}
                                        <span class="badge bg-green">si</span>
                                    {% else %}
                                        <span class="badge bg-primary">No</span>
                                    {% endif %}
                                </td>
                                <td align="center">
                                    <a href="{{ path('bauche_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                </td>
                                <td align="center"><a id="delete" href="#" onclick='eliminar("{{ path('bauche_delete', { 'id': entity.id }) }}")'><i class="fa fa-times-circle"></i></a> </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}