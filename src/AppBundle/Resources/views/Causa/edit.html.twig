{% extends '::front_layout.html.twig' %}

 {% block nomencladores %} class="active" {% endblock %}
 {% block causa %} class="active" {% endblock %}


{% block body -%}
    <h1><i class="fa fa-check-square"></i> Causas</h1>

    <div class="box box-solid box-primary">
        <div class="box-header">
            <h3 class="box-title">Editar Causa</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        {{ form_start(edit_form) }}
        <div class="box-body">
            {{ form_errors(edit_form) }}
            <div class="form-group">
                {{ form_row(edit_form.nombre) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.descripcion) }}
            </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a class="btn btn-default" href="{{ path('causa') }}">Cancelar</a>
        </div>
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}
    </div>
{% endblock %}