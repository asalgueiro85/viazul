{% extends '::front_layout.html.twig' %}

 {% block reportes %} class="active" {% endblock %}


{% block body -%}
    <div class="box box-solid box-primary">
        <div class="box-header">
            <h3 class="box-title">Filtros</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="{{ path('imprimir_actualizar') }} " role="form"
              method="post" >
        <div class="box-body col-md-12">
            <div class="col-md-2">
                {#<div class="form-group">#}
                    <label>Area</label><br>
                    <select class="form-group"  id="appbundle_area_reporte" name="appbundle_area_reporte">
                        {% for area in areas %}
                            <option value="{{ area.NombreArea }}">{{ area.NombreArea }}</option>
                        {% endfor %}
                    </select>
                {#</div>#}

            </div>
            <div class="col-md-2">
                {#<div class="form-group">#}
                <label>Destino</label><br>
                <select class="form-group"  id="appbundle_destino_reporte" name="appbundle_destino_reporte">
                    {% for destino in destinos %}
                        <option value="{{ destino.NombreProvincia }}">{{ destino.NombreProvincia }}</option>
                    {% endfor %}
                </select>
                {#</div>#}

            </div>
            <div class="col-md-2">
                <label>Causa</label><br>
                <select class="form-group"  id="appbundle_causa_reporte" name="appbundle_causa_reporte">
                    {% for causa in causas %}
                        <option value="{{ causa.id }}">{{ causa.nombre }}</option>
                    {% endfor %}
                </select>

            </div>


            <div class="col-md-2  form-group">
                <label>Date range:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input id="reservation" class="form-control pull-right" type="text">
                </div>
            </div>

            {#<div class="col-md-2 form-group">#}

                    {#<label>Desde</label>#}
                    {#<input id="appbundle_fecha_desde" class="form-control" type="date" placeholder="Fecha inicio" readonly="readonly" name="appbundle_fecha_desde">#}


            {#</div>#}
            {#<div class="col-md-2 form-group">#}

                {#<label>Hasta</label>#}
                {#<input id="appbundle_fecha_hasta" class="form-control" type="date" placeholder="Fecha fin" readonly="readonly" name="appbundle_fecha_hasta">#}


            {#</div>#}



            <div class="col-md-1">
                <button  class="btn btn-primary" style="margin-top: 35%" id="button_mostrar">Mostrar</button>
            </div>
            <div class="col-md-1">
                <a class="btn btn-default" href="{{ path('imprimir_reporte') }}" style="margin-top: 35%">Imprimir</a>
            </div>


        </div>
        </form>
        <!-- /.box-body -->


        {#<div class="box-footer">#}
            {#<button type="submit" class="btn btn-primary">Aceptar</button>#}
            {#<a class="btn btn-default" href="{{ path('bauche') }}">Cancelar</a>#}
        {#</div>#}
    </div>




<div class="row">
    <br/>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado de bauches</h3>
                {#{% if entities |length == 0 %}#}

                    {#<div class="pull-right">#}
                        {#<a href="{{ path('configuracion_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>#}
                    {#</div>#}
                {#{% endif %}#}
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table  class="table table-bordered sorting_desc table-striped">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Area</th>
                        <th>Director</th>
                        <th>Destino</th>
                        <th>Importe</th>
                        <th class="sorting_desc" >Emitido</th>
                    </tr>
                    </thead>
                    <tbody id="tbodytable">
                    {% for entity in entities %}
                        <tr>

                            <td>{{ entity.nombre }}</td>
                            <td>{{ entity.area }}</td>
                            <td>{{ entity.dirArea }}</td>
                            <td>{{ entity.destino }}</td>
                            <td>{{ entity.importe }}</td>
                            {#<td>#}
                                {#{% filter upper %}#}
                                {#{{ entity.destino }}#}
                                {#{% endfilter %}</td>#}
                            <td>{% if entity.fechaEmitido %}{{ entity.fechaEmitido|date('d-m-Y') }}{% endif %}</td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>


</div>
    {% endblock %}
