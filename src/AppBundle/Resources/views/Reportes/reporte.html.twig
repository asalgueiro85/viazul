{#{% extends '::base.html.twig' %}#}

 {#{% block reportes %} class="active" {% endblock %}#}


{% block body -%}

<div class="row">
    <br/>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado de bauches</h3>
                {#{% if entities |length == 0 %}#}

                    {#<div class="pull-right">#}
                        {#<a href="{{ path('configuracion_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>#}
                    {#</div>#}
                {#{% endif %}#}
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table  border="1">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Area</th>
                        <th>Director</th>
                        <th>Destino</th>
                        <th>Importe</th>
                        <th class="sorting_desc" >Emitido</th>
                    </tr>
                    </thead>
                    <tbody id="tbodytable">
                    {% for entity in entities %}
                        <tr>

                            <td>{{ entity.nombre }}</td>
                            <td>{{ entity.area }}</td>
                            <td>{{ entity.dirArea }}</td>
                            <td>{{ entity.destino }}</td>
                            <td>{{ entity.importe }}</td>
                            {#<td>#}
                                {#{% filter upper %}#}
                                {#{{ entity.destino }}#}
                                {#{% endfilter %}</td>#}
                            <td>{% if entity.fechaEmitido %}{{ entity.fechaEmitido|date('d-m-Y') }}{% endif %}</td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>


</div>
    {% endblock %}
